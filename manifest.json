{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "0.0.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_title": "Click Me",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["storage"]
}
